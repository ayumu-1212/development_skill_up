<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <div class="edit-user-title">
      <h3>Editing Book</h3>
    </div>
    <% if @book.errors.any? %>
      <div class="error-messages">
        <h3 class="error-message-title"><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
        <% @book.errors.full_messages.each do |message| %>
          <li class="error-message-content"><%= message %></li>
        <% end %>
      </div>
    <% end %>
    <div class="edit-user-form">
      <%= form_with model: @book, url: book_path(@book), local:true do |f| %>
        <p>Title</p>
        <%= f.text_field :title, class: "edit-user-formfield" %>
        <p>Opinion</p>
        <%= f.text_area :body, class: "edit-user-formfield" %>
        <%= f.submit 'Update Book', class: "btn btn-success btn-block" %>
      <% end %>
    </div>
    <div>
      <%= link_to "Show", book_path(@book), class: "link" %>
      <span> | </span>
      <%= link_to "Back", books_path, class: "link" %>
    </div>
  </div>
  <div class="col-md-2"></div>
</div>